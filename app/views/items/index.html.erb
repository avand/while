<% content_for :header do %>
  <%= render "ancestors" %>
<% end %>

<div class="items">
  <% if @items.present? %>
    <%= render @items %>
  <% end %>

  <%= render current_user.items.build %>
</div>

<div class="no-items align-center <%= "hide" if @items.present? %>"
     style="margin: 1.5em 0 5em; font-size: .75em; color: rgba(0, 0, 0, 0.35);">
  Nothing to do here.
</div>

<div class="control-bar-container">
  <div class="control-bar">
    <div class="control-bar-content">
      <% path = new_item_path(item: { parent_id: @parent.try(:id) }) %>
      <%= link_to path, class: "button button-icon button-primary new-item-button" do %>
        <i class="fa fa-fw fa-plus"></i>
      <% end %>
    </div>
  </div>
</div>

<div class="completed-items hide">
  <div class="completed-items-heading pointer">
    History<i class="fa fa-caret-down"></i><i class="fa fa-caret-up hide"></i>
  </div>

  <div class="completed-items-content hide">
    <script>While.history.load(location.pathname)</script>
  </div>
</div>
