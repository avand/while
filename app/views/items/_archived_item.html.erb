<div id="item-<%= item.id -%>"
     class="archived-item"
     data-item-id="<%= item.id -%>"
     data-item-completed-at="<%= item.completed_at -%>">
  <div class="archived-item-checkbox left clickable">
    <%= link_to complete_item_path(item), method: :patch do %>
      <i class="fa fa-fw fa-check-square-o"></i>
    <% end %>
  </div>

  <%= link_to items_path(item), class: "archived-item-content underline-on-hover" do %>
    <div class="archived-item-name">
      <%= item.name %>
    </div>
  <% end %>
</div>
