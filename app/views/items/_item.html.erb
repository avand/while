<div id="item-<%= item.id -%>"
     class="item"
     data-href="<%= items_path(item) -%>"
     data-state="default"
     data-hashid="<%= item.hashid -%>">
  <div class="item-checkbox left pointer">
    <i class="fa fa-fw fa-square-o"></i>
  </div>

  <div class="item-controls right">
    <%= link_to edit_item_path(item), class: "item-control item-edit-control no-underline" do %>
      <i class="fa fa-fw fa-pencil"></i>
    <% end %>

    <span class="item-delete-control item-control no-underline">
      <i class="fa fa-fw fa-trash"></i>
    </span>
  </div>

  <div class="item-content">
    <%= form_for item do |f| %>
      <%= f.hidden_field :name %>
      
      <div class="item-name">
        <%= item.name %>
      </div>

      <div class="item-buttons hide">
        <button type="submit" class="button button-small button-primary">Save</button>
        <a href="#" class="button button-small button-link item-edit-cancel-control">Cancel</a>
      </div>
    <% end %>

    <%= progress_bar item %>
  </div>

  <div class="item-delete-confirmation full-bleed absolute hide">
    <div class="item-delete-confirmation-buttons right">
      <span class="item-delete-cancel-control
                   button button-small button-link">Cancel</span>
      <span class="item-delete-confirm-control
                   button button-small button-danger">Delete</span>
    </div>

    <div class="item-delete-confirmation-message">
      <% descendants_count = item.descendants.not_deleted.not_completed.count %>

      <% if descendants_count.zero? %>
        Are you sure you want to delete this item?
      <% else %>
        Are you sure you want to delete this item and the
        <%= pluralize descendants_count, "item" %> it contains?
      <% end %>
    </div>
  </div>
</div>
