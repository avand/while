<div id="item-<%= item.id -%>"
     class="item"
     data-item-id="<%= item.id -%>"
     data-item-completed-at="<%= item.completed_at -%>">
  <div class="item-checkbox left clickable">
    <% if item.completed? %>
      <i class="fa fa-fw fa-check-square-o"></i>
    <% else %>
      <i class="fa fa-fw fa-square-o"></i>
    <% end %>
  </div>

  <div class="item-controls right">
    <%= link_to edit_item_path(item), class: "item-control no-underline" do %>
      <i class="fa fa-fw fa-pencil"></i>
    <% end %>

    <span class="item-delete-control item-control no-underline">
      <i class="fa fa-fw fa-trash"></i>
    </span>
  </div>

  <%= link_to items_path(item), class: "item-content" do %>
    <div class="item-name <%= "strikethrough" if item.completed? -%>">
      <%= item.name %>
    </div>

    <%= progress_bar item %>
  <% end %>

  <div class="item-delete-confirmation full-bleed hidden">
    <span style="margin-bottom: .5em;">
      Are you sure you want to delete this item?
    </span>

    <span class="item-delete-confirm-control
                 underline-on-hover
                 medium-weight
                 clickable">Yes</span>

    &middot;

    <span class="item-delete-cancel-control
                 underline-on-hover
                 medium-weight
                 clickable">No</span>
  </div>
</div>
