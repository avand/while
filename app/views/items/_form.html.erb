<%= form_for(item) do |f| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <% if @parent_items.present? %>
    <div class="field">
      <%= f.label :parent_id %>
      <%= f.select :parent_id, @parent_items.map { |i| [truncate(i.name), i.id] }, include_blank: "None" %>
    </div>
  <% end %>

  <div class="actions">
    <button type="submit" class="button button-primary">
      <%= item.new_record? ? "Create" : "Update" %>
    </button>

    <button type="submit" class="button button-link">
      <%= link_to "Cancel", items_path(@item.parent) %>
    </button>
  </div>
<% end %>
