<div id="item-<%= item.id -%>"
     class="completed-item"
     data-item-hashid="<%= item.hashid -%>"
     data-item-completed-at="<%= item.completed_at -%>">
  <div class="completed-item-checkbox left pointer">
    <%= link_to complete_item_path(item), method: :patch do %>
      <i class="fa fa-fw fa-check-square-o"></i>
    <% end %>
  </div>

  <div class="completed-item-content">
    <%= link_to items_path(item), class: "underline-on-hover" do %>
      <span class="completed-item-name">
        <%= item.name %>
      </span>
    <% end %>

    <% if (descendants_count = item.descendants.count) > 0 %>
      <div class="completed-item-descendants-count">
        <%= pluralize item.descendants.count, "item" %>
      </div>
    <% end %>
  </div>
</div>
