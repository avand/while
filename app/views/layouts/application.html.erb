<!DOCTYPE html>
<html>
  <head>
    <title>While</title>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => 'reload' %>

    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=0">

    <link rel="apple-touch-icon" href="<%= asset_path "logo.png" -%>">
    <link rel="icon" type="image/png" href="<%= asset_path "logo.png" -%>">
  </head>

  <body>
    <header>
      <div class="brand inline">
        <strong>While</strong>
      </div>

      <nav class="inline right">
        <% if current_user.present? %>
          <%= current_user.name %> &middot;
          <%= link_to 'Log out', sessions_path, method: :delete, class: "underline", data: { 'no-turbolinks' => true } %>
        <% else %>
          <a href="/auth/google_oauth2" data-no-turbolinks class="underline">Log in</a>
        <% end %>
      </nav>
    </header>

    <main>
      <%= yield %>
    </main>
  </body>
</html>
